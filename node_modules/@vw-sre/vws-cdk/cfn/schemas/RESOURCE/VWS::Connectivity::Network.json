{
  "typeName": "VWS::Connectivity::Network",
  "description": "Allocates a network CIDR out of a larger routable network range",
  "sourceUrl": "https://github.com/vwvws/vws-cfn-connectivity-network-resource",
  "definitions": {},
  "properties": {
    "Id": {
      "description": "network cidr identifier",
      "type": "string"
    },
    "Network": {
      "description": "network cidr",
      "type": "string"
    },
    "Size": {
      "description": "Size of the allocated network CIDR range.",
      "type": "integer",
      "enum": [
        24,
        25,
        26
      ]
    },
    "Pool": {
      "description": "Pool to allocated network range from",
      "type": "string",
      "pattern": "[a-z]{4,24}"
    },
    "TransitGatewayId": {
      "description": "id of the transit gateway responsible for routing this network",
      "type": "string",
      "pattern": "tgw\\-[a-z0-9\\-]{12,24}"
    }
  },
  "additionalProperties": false,
  "required": [
    "Pool",
    "Size"
  ],
  "writeOnlyProperties": [
    "/properties/Size"
  ],
  "readOnlyProperties": [
    "/properties/Id",
    "/properties/Network",
    "/properties/TransitGatewayId"
  ],
  "primaryIdentifier": [
    "/properties/Id"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "read": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "delete": {
      "permissions": [
        "execute-api:Invoke"
      ]
    }
  }
}
