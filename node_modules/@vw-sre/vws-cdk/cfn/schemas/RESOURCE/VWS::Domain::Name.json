{
  "typeName": "VWS::Domain::Name",
  "description": "Allocates a vwapps.run subdomain",
  "sourceUrl": "https://github.com/vwvws/vws-cfn-domain-name-resource.git",
  "definitions": {},
  "properties": {
    "Domain": {
      "oneOf": [
        {
          "additionalProperties": false,
          "properties": {
            "Root": {
              "description": "root domain to allocate the name with",
              "type": "string",
              "pattern": "^([a-z0-9\\-\\.]{3,64}\\.)+[a-z]{2,8}$"
            },
            "Name": {
              "description": "Name of the subdomain",
              "type": "string",
              "pattern": "^[a-z0-9\\-]{2,64}$"
            },
            "Authorization": {
              "description": "Serenity route migration authorization",
              "type": "string"
            }
          },
          "required": [
            "Name"
          ]
        },
        {
          "additionalProperties": false,
          "properties": {
            "Root": {
              "description": "root domain to allocate the name with",
              "type": "string",
              "pattern": "^([a-z0-9\\-\\.]{3,64}\\.)+[a-z]{2,8}$"
            },
            "Random": {
              "description": "If true, generate an unique, random subdomain name.",
              "type": "boolean"
            }
          },
          "required": [
            "Random"
          ]
        }
      ]
    },
    "FQDN": {
      "description": "resulting fully-qualified subdomain apex",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "readOnlyProperties": [
    "/properties/FQDN"
  ],
  "createOnlyProperties": [
    "/properties/Domain"
  ],
  "writeOnlyProperties": [
    "/properties/Domain"
  ],
  "primaryIdentifier": [
    "/properties/FQDN"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "read": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "delete": {
      "permissions": [
        "execute-api:Invoke"
      ]
    }
  }
}
