{
  "typeName": "VWS::Proxy::Instance",
  "description": "VWS proxy service instance. Provides a VPC endpoint service name after creation.",
  "sourceUrl": "https://github.com/vwvws/vws-cfn-proxy-instance-resource",
  "definitions": {},
  "properties": {
    "Id": {
      "description": "proxy instance id",
      "type": "string"
    },
    "ServiceName": {
      "description": "proxy VPC endpoint service name",
      "type": "string"
    },
    "DnsName": {
      "description": "private proxy endpoint dns name",
      "type": "string"
    },
    "AllowedSuffixes": {
      "description": "list of allowed DNS suffixes",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([A-Za-z0-9][A-Za-z0-9\\-]*\\.)+[a-zA-Z]{2,32}$"
      },
      "minItems": 1
    },
    "AllowedCidrs": {
      "description": "list of allowed target CIDR ranges",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(([1-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])(\\/(1[6-9]|2[0-9]|3[0-2]))$"
      },
      "minItems": 1
    },
    "AllowedPorts": {
      "description": "list of ports allowed to connect to",
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 1,
        "exclusiveMaximum": 65536
      },
      "minItems": 1
    },
    "Environment": {
      "description": "internal property for test and debug purposes",
      "type": "string",
      "pattern": "^production|sandbox$"
    }
  },
  "additionalProperties": false,
  "anyOf": [
    {
      "required": [
        "AllowedPorts",
        "AllowedCidrs"
      ]
    },
    {
      "required": [
        "AllowedPorts",
        "AllowedSuffixes"
      ]
    }
  ],
  "readOnlyProperties": [
    "/properties/Id",
    "/properties/ServiceName",
    "/properties/DnsName"
  ],
  "writeOnlyProperties": [
    "/properties/AllowedSuffixes",
    "/properties/AllowedCidrs",
    "/properties/AllowedPorts",
    "/properties/Environment"
  ],
  "primaryIdentifier": [
    "/properties/Id"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "read": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "update": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "delete": {
      "permissions": [
        "execute-api:Invoke"
      ]
    }
  }
}
