{
  "typeName": "VWS::Login::Client",
  "description": "Configures an OIDC client and returns its credentials and metadata",
  "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-rpdk.git",
  "definitions": {},
  "properties": {
    "Id": {
      "description": "resource identifier",
      "type": "string"
    },
    "SecretArn": {
      "description": "OIDC client credentials SecretsManager secret arn",
      "type": "string"
    },
    "Issuer": {
      "description": "authorization endpoint",
      "type": "string"
    },
    "AuthorizationEndpoint": {
      "description": "authorization endpoint",
      "type": "string"
    },
    "TokenEndpoint": {
      "description": "token endpoint",
      "type": "string"
    },
    "UserInfoEndpoint": {
      "description": "user-info endpoint",
      "type": "string"
    },
    "LogoutEndpoint": {
      "description": "logout url",
      "type": "string"
    },
    "CallbackUrl": {
      "description": "list of idp callback urls",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^https:\\/\\/[a-z0-9\\-\\.]+\\.[a-z]{2,8}(\\/.*)?$"
      },
      "minItems": 1,
      "maxItems": 50
    },
    "LogoutUrl": {
      "description": "list of allowed logout redirect urls",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^https:\\/\\/[a-z0-9\\-\\.]+\\.[a-z]{2,8}(\\/.*)?$"
      },
      "minItems": 0,
      "maxItems": 50
    }
  },
  "additionalProperties": false,
  "required": [
    "CallbackUrl"
  ],
  "readOnlyProperties": [
    "/properties/Id",
    "/properties/SecretArn",
    "/properties/Issuer",
    "/properties/AuthorizationEndpoint",
    "/properties/TokenEndpoint",
    "/properties/LogoutEndpoint",
    "/properties/UserInfoEndpoint"
  ],
  "writeOnlyProperties": [
    "/properties/CallbackUrl",
    "/properties/LogoutUrl"
  ],
  "primaryIdentifier": [
    "/properties/Id"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "read": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "update": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "delete": {
      "permissions": [
        "execute-api:Invoke"
      ]
    }
  }
}
