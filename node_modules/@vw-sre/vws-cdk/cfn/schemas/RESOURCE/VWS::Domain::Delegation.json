{
  "typeName": "VWS::Domain::Delegation",
  "description": "Delegates a vwapps.run subdomain to a set of nameservers",
  "sourceUrl": "https://github.com/vwvws/vws-cfn-domain-delegation-resource.git",
  "definitions": {},
  "properties": {
    "Domain": {
      "description": "FQDN of the subdomain to delegate. The domain must have been allocated to the same AWS account or else the delegation will fail.",
      "type": "string",
      "pattern": "^([a-z0-9\\-\\.]{2,64}\\.)+[a-z]{2,8}$"
    },
    "Nameservers": {
      "description": "Set of nameservers the domain should be delegated to.",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9\\-\\.]*.[a-z]{2,8}$"
      },
      "minItems": 1
    },
    "HostedZone": {
      "description": "Id of the private hosted zone that should be exposed.",
      "type": "string",
      "pattern": "^[A-Z0-9]{20,32}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "Domain"
  ],
  "createOnlyProperties": [
    "/properties/Domain",
    "/properties/HostedZone",
    "/properties/Nameservers"
  ],
  "writeOnlyProperties": [
    "/properties/HostedZone",
    "/properties/Nameservers"
  ],
  "primaryIdentifier": [
    "/properties/Domain"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "read": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "delete": {
      "permissions": [
        "execute-api:Invoke"
      ]
    }
  }
}
