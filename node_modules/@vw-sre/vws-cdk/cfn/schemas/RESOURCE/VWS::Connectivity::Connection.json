{
  "typeName": "VWS::Connectivity::Connection",
  "description": "Accepts VPC TGW attachment",
  "sourceUrl": "https://github.com/vwvws/vws-cfn-connectivity-connection-resource",
  "definitions": {},
  "properties": {
    "Id": {
      "description": "connection identifier",
      "type": "string",
      "pattern": "[a-z0-9\\-]{36}"
    },
    "Network": {
      "description": "vws connectivity network reference",
      "type": "string",
      "pattern": "[a-z0-9\\-]{36}"
    },
    "VpcId": {
      "description": "vws connectivity network reference",
      "type": "string",
      "pattern": "vpc\\-[a-z0-9\\-]{8,24}"
    },
    "TransitGatewayId": {
      "description": "id of the transit gateway responsible for routing this network",
      "type": "string",
      "pattern": "tgw\\-[a-z0-9\\-]{12,24}"
    }
  },
  "additionalProperties": false,
  "required": [
    "Network",
    "VpcId",
    "TransitGatewayId"
  ],
  "primaryIdentifier": [
    "/properties/Id"
  ],
  "readOnlyProperties": [
    "/properties/Id"
  ],
  "writeOnlyProperties": [
    "/properties/Network",
    "/properties/VpcId",
    "/properties/TransitGatewayId"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "read": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "delete": {
      "permissions": [
        "execute-api:Invoke"
      ]
    }
  }
}
