{
  "typeName": "VWS::Connectivity::Resolver",
  "description": "Shares Volkswagen On-Prem DNS resolver rules with account",
  "sourceUrl": "https://github.com/vwvws/vws-cfn-connectivity-resolver-resource",
  "definitions": {},
  "properties": {
    "Id": {
      "description": "resolver share identifier",
      "type": "string",
      "pattern": "[a-z0-9\\-]{36}"
    },
    "Rules": {
      "description": "resolver rule arns shared with account",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "Pool": {
      "description": "Pool to allocated network range from",
      "type": "string",
      "pattern": "[a-z]{4,24}"
    }
  },
  "additionalProperties": false,
  "required": [
    "Pool"
  ],
  "primaryIdentifier": [
    "/properties/Id"
  ],
  "readOnlyProperties": [
    "/properties/Id",
    "/properties/Rules"
  ],
  "createOnlyProperties": [
    "/properties/Pool"
  ],
  "writeOnlyProperties": [
    "/properties/Pool"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "read": {
      "permissions": [
        "execute-api:Invoke"
      ]
    },
    "delete": {
      "permissions": [
        "execute-api:Invoke"
      ]
    }
  }
}
